<div class="row">
  <BR>
  <BR>
  <div class="col-md-8 col-md-offset-2">
    <div class="center">
      <h1 id="logo-home" class="animated fadeInDown">A★Kirameter</h1>
      <hr>
      <h3>〜アキラメをキラメキ★に〜</h3>
      <p class="explain"> 今諦めたこと、今までに諦めたこと、これから諦めること</p>
      <br>
      <div class="akirame_counter">
        <span class="data-label">Akirame.ALL</span>
        <br>
        <span id="akirameter">
        <%= pluralize(Micropost.count, "") %>
        <!--<%= Micropost.where(seibetsu: '男').count %>
        <%= Micropost.where(seibetsu: '女').count %>-->
        </span>
      </div>
      <div class="col-md-4 charts_group"><%= pie_chart Micropost.group(:age).count ,library: {backgroundColor: 'transparent',pieSliceText: 'label',legend: 'none'} %></div>
      <div class="col-md-4 charts_group"><%= pie_chart Micropost.group(:genre).count ,library: {backgroundColor: 'transparent',pieSliceText: 'label',legend: 'none',colors:['#B0BEC5','#b71c1c','#0D47A1']}%></div>
      <div class="col-md-4 charts_group"><%= pie_chart Micropost.group(:seibetsu).count ,library: {backgroundColor: 'transparent',pieSliceText: 'label',legend: 'none',colors:['#B0BEC5','#b71c1c','#0D47A1']}%></div>
     
      <BR>
      <BR>
      <div class="akirame-form">
        <%= link_to "アキラメル", new_micropost_path, class: "col-md-8 col-md-offset-2" %>
        <div class="col-md-8 col-md-offset-2 akirame-form" >
          <%= render 'shared/akirame_tweet_form' %>
        </div>
      </div>
      
      <div style="display:inline-flex" class="share_bottun">
        <%= render_shareable :buttons=> ['twitter'] %>
        <%= render_shareable :buttons=> ['facebook'] %>
      </div>
      
      <div class="akirame-tweets">
        <% @micropost_all.each do |m| %>
        <div class="field_contents">
          <div class="akirame">
            <%= m.content %>
          </div>
          <div class="akirame_info">
            <% if m.age.present? %><span class="age_info"><%= m.age %></span><% end %>
            <% if m.seibetsu.present? %><span class="seibetsu_info"><%= m.seibetsu %></span><% end %>
            <% if m.genre.present? %><span class="genre_info"><%= m.genre %></span><% end %>
            <% if m.past_time.present? %><span class="past_time_info"><%= m.past_time %></span><% end %>
            <span class="created_info"><%= m.created_at %></span>
          </div>
        </div>
        <% end %>
      </div>
  　   <BR>
  　  <!---
     <%= link_to "Sign up now!", microposts_path, class: "btn btn-xs btn-primary" %>
     --->
    </div>
  </div>
  
</div>
