<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="row">
 <div class="col-md-6 col-md-offset-3">
  <div class="center">
    <h1>A★Kirameter</h1>
    <h3>〜アキラメをキラメキ★に〜</h3>
    <BR>
      <p>all_Akirame</p>
      <span id="akirameter">
      <%= pluralize(Micropost.count, "") %>
      </span>
      <br>
       <%= link_to "アキラメル！", new_micropost_path, class: "btn btn-lg btn-default" %>
      <BR><BR>
        
    <div class="akirame-tweets">
      <p class="btn-sm btn-info">new_Akirame</p>
    <% @micropost_all.each do |m| %>
<div class="field content"><%= m.content %>,</div>
<div class="field content"><%= m.seibetsu %>,</div>
[posted] <%= m.created_at %><br />
<hr />
<% end %>
    </div>
    <%= link_to "Sign up now!", microposts_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>
</div>
<% end %>