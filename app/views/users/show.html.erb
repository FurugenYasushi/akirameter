<div class="row">
    <div class="col-md-2 col-md-offset-5">
      <h1>
        <%= gravatar_for @user %>
      </h1>
    </div>
    <div class="col-md-2 col-md-offset-5">
      <h1>
        <%= @user.name %>
      </h1>
    </div>
    <div class="col-md-2 col-md-offset-5">
      <h2>
      <%= @user.email %><BR><BR>
      <%= @user.bio %><BR><BR>
      <%= @user.area %>
      </h2>
    </div>
    <div class="col-md-2 col-md-offset-5">
      <button type="button" class="btn btn-primary btn-block"><%= link_to "edit" , edit_user_path(@user) %></button>
    </div>
</div>
